@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h2>Stylists</h2>

<div class="margin">
  @if (Model.Count == 0)
  {
    <h5>You haven't added any stylists yet</h5>
  }
  <ul>
    @foreach( Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
    }
  </ul>
</div>


<p class="anchors">@Html.ActionLink("Add new stylist", "Create")</p>